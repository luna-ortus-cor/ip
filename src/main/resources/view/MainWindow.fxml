<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="600.0" prefWidth="400.0"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="miku.MainWindow"
            style="-fx-background-color: #ECE5DD;">
    <children>
        <TextField fx:id="userInput"
                   layoutX="10.0" layoutY="558.0"
                   text="Type here"
                   onAction="#handleUserInput"
                   prefHeight="41.0"
                   prefWidth="324.0"
                   AnchorPane.bottomAnchor="1.0"
                   style="-fx-background-radius: 15px;
                          -fx-border-radius: 15px;
                          -fx-padding: 10px;
                          -fx-font-size: 14px;
                          -fx-background-color: #FFFFFF;"/>
        <Button fx:id="enterButton"
                layoutX="324.0"
                layoutY="558.0"
                text="Enter"
                mnemonicParsing="false"
                onAction="#handleUserInput"
                prefHeight="41.0"
                prefWidth="76.0"
                AnchorPane.bottomAnchor="1.0"
                style="-fx-background-color: #25D366;
                       -fx-text-fill: white;
                       -fx-font-size: 14px;
                       -fx-background-radius: 15px;"/>
        <ScrollPane fx:id="scrollPane"
                    vbarPolicy="ALWAYS"
                    hbarPolicy="NEVER"
                    fitToWidth="true"
                    hvalue="1.0"
                    prefHeight="557.0"
                    prefWidth="400.0"
                    vvalue="1.0"
                    style="-fx-background: transparent;
                           -fx-background-color: transparent;">
            <content>
                <VBox fx:id="dialogContainer"
                      prefHeight="552.0"
                      prefWidth="388.0"
                      style="-fx-padding: 10px;"/>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>


